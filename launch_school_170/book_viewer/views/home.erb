<h2 class='content-subhead'>Table of Contents</h2>

<div class='pure-menu'>
  <ol class='pure-menu-list'>
    <% @contents.each.with_index(1) do |chapter, num| %>
      <li class='pure-menu-item'>
        <a href='/chapters/<%= num %>' class='pure-menu-link'><%= chapter %></a>
      </li>
    <% end %>
  </ol>
</div>
