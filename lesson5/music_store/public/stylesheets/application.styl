@import 'whitespace-reset.css'
@import 'mixins'

body
  background: colors.bg
  color:      colors.text
  font:       normal 18px Lato, sans-serif

h1
  font-size: 2em
  padding:   0 0 25px 0

form
  dt
    padding: 0 0 5px 0
  dd
    padding: 0 0 20px 0
  input[type='text'],
  input[type='date'],
  input[type='url']
    background: colors.bg
    color: colors.text
    border:        1px solid colors.border
    border-radius: 6px
    box-sizing:    border-box
    font-size: 1rem
    height:        30px
    padding:       5px 8px
    width:         100%

main
  background: colors.main
  clear:      both
  margin:     0 auto
  padding:    25px 40px
  width:      800px

#index
  ul
    margin:  0 0 0 -20px
    padding: 0 0 40px 0
    li
      box-sizing:     border-box
      display:        inline-block
      padding:        0 0 25px 20px
      vertical-align: top
      width:          20%
      img
        display: block
        margin:  0 0 10px 0
        width:   100%
      h2, h3, p
        padding: 0 0 5px 0
      h2
        font-size: 1.5em
      h3
        font-size: 1.25em

a.button, input[type='submit']
  button()

header
  margin:     0 auto
  padding:    0 40px
  width:      800px

#cart
  float:      right
  padding:    15px 0 0 0
  position:   relative
  text-align: right
  width:      50%
  label
    cursor:  pointer
    display: inline-block
    padding: 2px 3px
  input
    display: none
    &:checked
      + #items
        display: block
  #items
    display: none
    position:   absolute
    top:        100%
    right:      0
    z-index:    1
    padding:    5px 10px
    color:      colors.button.text
    background: colors.button.bg
    li
      padding:   5px 0
      font-size: 12px
      text-align: left
    small
      font-size: 11px
      float: right
      margin: 0 0 0 10px
    a
      float:    left
      position: relative
      width: 12px
      height: 12px
      margin: 0 5px 0 0
      overflow: hidden
      text-indent: 8685px
      transform: rotate(45deg)
      &:before,
      &:after
        position:   absolute
        content:    ''
        background: colors.delete
      &:before
        top: 0
        bottom: 0
        left: 50%
        margin-left: -1px
        width: 2px
      &:after
        top: 50%
        right: 0
        left: 0
        height: 2px
        margin-top: -1px
